{
  "name": "reveal-md",
  "description": "reveal.js on steroids! Get beautiful reveal.js presentations from your Markdown files.",
  "keywords": [
    "markdown",
    "reveal",
    "revealjs",
    "html",
    "server",
    "cli"
  ],
  "version": "5.5.1",
  "repository": {
    "type": "git",
    "url": "git://github.com/webpro/reveal-md.git"
  },
  "homepage": "https://github.com/webpro/reveal-md#readme",
  "bugs": "https://github.com/webpro/reveal-md/issues",
  "license": "MIT",
  "bin": {
    "reveal-md": "bin/reveal-md.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "test": "bron test/*.spec.js",
    "lint": "eslint lib test",
    "format": "prettier --write lib/**/*.js bin/*.js test/*.js *.md",
    "release": "release-it"
  },
  "dependencies": {
    "debug": "4.4.3",
    "express": "5.2.1",
    "fs-extra": "11.3.3",
    "glob": "13.0.0",
    "highlight.js": "11.11.1",
    "livereload": "0.10.3",
    "lodash": "4.17.23",
    "mustache": "4.2.0",
    "open": "11.0.0",
    "reveal.js": "5.2.1",
    "serve-favicon": "2.5.1",
    "try-require": "1.2.1",
    "update-notifier": "7.3.1",
    "yaml-front-matter": "4.1.1",
    "yargs-parser": "22.0.0"
  },
  "optionalDependencies": {
    "puppeteer": "24.34.0"
  },
  "devDependencies": {
    "bron": "2.0.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.7.4",
    "release-it": "19.2.3"
  },
  "engines": {
    "node": ">=12"
  }
}
